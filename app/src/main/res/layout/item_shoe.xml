<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemShoeLayout">

    <ImageView
        android:id="@+id/ivShoeImageListView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shoe_logo" />

    <TextView
        android:id="@+id/tvShoeNameListView"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#afff"
        android:padding="4dp"
        android:text="Show Name"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/ivShoeImageListView"
        app:layout_constraintEnd_toEndOf="@+id/ivShoeImageListView"
        app:layout_constraintStart_toStartOf="@+id/ivShoeImageListView" />
</androidx.constraintlayout.widget.ConstraintLayout>